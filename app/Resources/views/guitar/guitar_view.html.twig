<div class="modal fade" id={{ guitar.name }} role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="row">
                <div class="col-md-1">
                <button type="button" onclick="addGuitar({{ guitar.id }})" class="btn btn-default btn-sm btn-circle" aria-label="Add Guitar">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
                </div>
                <div class="col-md-11">
                <h2 class="modal-title">{{ guitar.name }}</h2>
                </div>
            </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                             <img class="img-thumbnail" src = {{ asset('images/' ~ guitar.imgPath) }} alt = {{ guitar.name }}>
                             <input type="hidden" class="rating-tooltip-manual" data-filled="fa fa-star fa-3x" data-empty="fa fa-star-o fa-3x" data-fractions="3"/>
                             <input type="hidden" class="rating" value={{ guitar.rating }}/>
                             {#<div id="review-form">
                                <label for="review" class="col-lg-3 control-label">Review:</label>
                                <div class="col-lg-8">
                                    <input name="review" class="form-control" type="text" value="">
                                </div>
                                {#<input type="submit" class="btn btn-primary" value="Send Review"/>
                             </div>#}
                        </div>
                        <div class="col-md-4">
                            <h3>{{ guitar.name }}</h3>
                            <p>{{ guitar.description }}</p>
                            <br>
                            <br>
                            <h4>Reviews:</h4>
                            <div class="card-content clearfix">
                                {% for review in guitar.review %}
                                    {{ include('review/review_card.html.twig', { 'review': review }) }}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>