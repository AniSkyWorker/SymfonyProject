<div class="modal fade" id={{ guitar.name }} role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <div class="row">
                <div class="col-md-1">
                <button type="button" class="btn btn-default btn-sm btn-circle" aria-label="Add Guitar">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                </button>
                </div>
                <div class="col-md-11">
                <h2 class="modal-title">{{ guitar.name }}</h2>
                </div>
            </div>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-8">
                             <img class="img-thumbnail" src = {{ asset('images/' ~ guitar.imgPath) }} alt = {{ guitar.name }}>
                        </div>
                        <div class="col-md-4">
                            <h3>{{ guitar.name }}</h3>
                            <p>{{ guitar.description }}</p>
                            <br>
                            <br>
                            <h4>Reviews:</h4>
                            <div class="card-content clearfix">
                                {% for review in guitar.review %}
                                    {{ include('review/review_card.html.twig', { 'review': review }) }}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>